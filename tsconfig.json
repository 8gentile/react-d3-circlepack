{
  "compilerOptions": {
    "sourceMap": true,
    "noImplicitAny": false,
    "moduleResolution": "node",
    "module": "es6",
    "target": "es5",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom"
    ],
    "typeRoots": [
      "node_modules/@types",
      "manual_typings"
    ],
    "baseUrl": ".",
    "paths": {
      "lodash/*": [
        "node_modules/@types/lodash-es/*"
      ],
    },
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "isolatedModules": false,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "emitDeclarationOnly": false,
    "outDir": "lib",
    "allowJs": false,
    "skipLibCheck": true,
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "./node_modules"
  ]
}